        var fristItem = listNode.children().eq(0);
        var secondItem = listNode.children().eq(1);

        
        var itemHeight = fristItem.outerHeight();
        console.log(itemHeight)
        
        var func = function(){
            listNode.animate({
                scrollTop: listNode.children().eq(0).outerHeight()
            }, 1000, function(){
                listNode.children()[totalLength-1].after(listNode.children()[0])
                setTimeout(func, 3000)
            });
        }
        func()
    }


    $(function(){
        
        gundong({
            listNode:$('.content-index-shangpin-list'),
            dir:1
        });

        tiaodong({listNode:$('#list_1')});
        tiaodong({listNode:$('#list_2')});
        tiaodong({listNode:$('#list_3')});



        // content-index-title-list
