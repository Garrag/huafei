<!-- 加载编辑器的容器 -->
<form id="jx_new_form" style="margin-top: 50px; padding-left: 5%; padding-right: 5%" class="am-form">
    <div class="am-form-group">
        <label for="doc-ta-1">公司简介</label>
        <textarea class="" rows="5" id="company_info"><%=base_info.info%></textarea>
    </div>
    <br>
    <button onclick="editCompanyInfo()" type="button" class="am-btn am-btn-danger am-btn-sm">保存</button>
</form>

<script>
    var editCompanyInfo = function () {
        var info = $('#company_info').val();
        $.post('/background/editcompany',
            {
                type:'info',
                info: info,
            },
            function (data) {
                if (data.ret === 0) {
                    alert('更新成功!');
                    window.location.reload();
                } else {
                    alert('更新失败:' + data.msg);
                }
            });
        }
</script>